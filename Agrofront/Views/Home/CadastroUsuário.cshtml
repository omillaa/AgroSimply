@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Formulario Responsivo de registro</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Agrofront.styles.css" asp-append-version="true" />
    <style>
        * {
            padding: 0;
            margin: 0;
            box-sizing: content-box;
        }

        body {
            width: 100vw;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .btn-link {
            text-decoration: none;
            border: 1px solid #000;
            width: 1000px;
            text-align: center;
            padding: 10px;
            font-family: Verdana, Geneva, Tahoma, sans-serif;
            font-size: 16px;
            background-color: #006400;
            color: #fff;
        }

            .btn-link:hover {
                box-shadow: 2px 2px #000;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="form-title">Cadastro de Produtores</h1>
        <img src="~/imagens/agroo.png" alt="Logo">
        <form action="#">
            <div class="main-user-info">
                <div class="user-input-box">
                    <label for="fullName">Nome Completo</label>
                    <input type="text" id="fullName" name="fullName" placeholder="Entre com o nome completo" />
                </div>
                <div class="user-input-box">
                    <label for="email">CPF/CNPJ</label>
                    <input type="email" id="email" name="email" placeholder="Entre com seu CPF ou CNPJ" />
                </div>
                <div class="user-input-box">
                    <label for="phoneNumber">Numero de telefone</label>
                    <input type="text" id="phoneNumber" name="phoneNumber" placeholder="Entre com o numero de telefone" />
                </div>
                <div class="user-input-box">
                    <label for="address">Endereço</label>
                    <input type="text" id="address" name="address" placeholder="Insira seu Endereço" />
                </div>
                <div class="user-input-box">
                    <label for="password">Senha</label>
                    <input type="password" id="password" name="password" placeholder="Inserir senha" />
                </div>
                <div class="user-input-box">
                    <label for="confirmPassword">Confirmar Senha</label>
                    <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirmar senha" />
                </div>
            </div>
            <div>
                <a class="btn-link" href="index.html">Finalizar cadastro</a>
            </div>
            <!-- Voltar para primeira página -->
            <div>
                <a class="btn-link" href="4index.html">Propriedades</a>
            </div>
        </form>
    </div>
</body>
</html>
